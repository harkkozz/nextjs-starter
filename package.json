{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H dev.app.io & typesafe-i18n",
    "build": "next build",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --passWithNoTests --coverage",
    "lint": "next lint",
    "lint:staged": "lint-staged",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "lint:ts-coverage": "type-coverage",
    "lint:eslint": "next lint --format json --output-file eslint-report.json",
    "prepare": "husky install || npx -y husky install",
    "codegen:i18n": "typesafe-i18n",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tanstack/query-core": "^5.51.9",
    "@tanstack/react-query": "^5.51.11",
    "@tanstack/react-query-devtools": "^5.51.11",
    "@types/node": "20.16.15",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "next": "15.0.1",
    "object-hash": "^3.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "turbo": "latest",
    "typesafe-i18n": "^5.26.2",
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/types": "^19.0.0",
    "@happy-dom/jest-environment": "^15.0.0",
    "@swc/core": "^1.7.2",
    "@swc/jest": "^0.2.36",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.3.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/object-hash": "^3.0.6",
    "eslint": "8.57.1",
    "eslint-config-next": "15.0.1",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "next-router-mock": "^0.9.13",
    "prettier": "^3.3.3",
    "type-coverage": "^2.29.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7",
    "npm": "please-use-pnpm"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write",
    "src/**/*.{j,t}s?(x)": [
      "eslint --cache --fix"
    ]
  }
}
