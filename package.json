{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H dev.app.io & typesafe-i18n",
    "build": "next build",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:cov": "jest --passWithNoTests --coverage",
    "lint": "next lint",
    "lint:staged": "lint-staged",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "lint:ts-coverage": "type-coverage",
    "lint:eslint": "next lint --format json --output-file eslint-report.json",
    "prepare": "husky install || npx -y husky install",
    "codegen:i18n": "typesafe-i18n",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@svgr/webpack": "^8.0.1",
    "@tanstack/query-core": "^5.17.10",
    "@tanstack/react-query": "^5.17.12",
    "@tanstack/react-query-devtools": "^5.17.12",
    "@types/node": "20.11.2",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "next": "14.0.4",
    "object-hash": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "turbo": "latest",
    "typesafe-i18n": "^5.24.4",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/types": "^18.4.4",
    "@happy-dom/jest-environment": "^13.1.4",
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.26",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.3",
    "@types/object-hash": "^3.0.2",
    "@types/testing-library__jest-dom": "^6.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^15.0.0",
    "next-router-mock": "^0.9.7",
    "prettier": "^3.0.0",
    "type-coverage": "^2.26.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7",
    "npm": "please-use-pnpm"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write",
    "src/**/*.{j,t}s?(x)": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@8.14.1"
}
